# VerifiMind PEAS Environment Configuration
# Copy this file to .env and fill in your actual values
# Updated: January 28, 2026 - BYOK v0.3.0

# =============================================================================
# BYOK v0.3.0 - MULTI-PROVIDER LLM CONFIGURATION
# =============================================================================
# Supports: gemini (FREE), groq (FREE), openai, anthropic, mistral, ollama (local), mock
# Priority: LLM_PROVIDER -> LLM_FALLBACK_PROVIDER -> mock

# Primary LLM Provider
# Options: gemini, groq, openai, anthropic, mistral, ollama, mock
LLM_PROVIDER=gemini

# Fallback Provider (used if primary fails)
LLM_FALLBACK_PROVIDER=mock

# Optional: Override default model for your provider
# LLM_MODEL=gemini-1.5-flash

# Optional: Override temperature and max tokens
# LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=4096

# =============================================================================
# PROVIDER API KEYS (only set the one you're using)
# =============================================================================

# Google Gemini (FREE tier available!)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq (FREE tier available!)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenAI
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Mistral AI
# Get your API key from: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=your_mistral_api_key_here

# Ollama (Local) - No API key needed
# Install from: https://ollama.ai
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# LEGACY CONFIGURATION (for backward compatibility)
# =============================================================================
# These variables are still supported but LLM_PROVIDER is preferred
# VERIFIMIND_LLM_PROVIDER=gemini
# VERIFIMIND_LLM_MODEL=gemini-1.5-flash

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment Mode (development, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=false

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Output Directory for Generated Apps
OUTPUT_DIR=./output

# Maximum Iterations for RefleXion Loop
MAX_ITERATIONS=3

# =============================================================================
# ATTRIBUTION SYSTEM
# =============================================================================

# Creator Information
CREATOR_NAME=Your Name
CREATOR_EMAIL=your.email@example.com
CREATOR_ORGANIZATION=Your Organization

# Attribution Mode (blockchain, local, hybrid)
ATTRIBUTION_MODE=local

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# =============================================================================

# Enable Blockchain Attribution (true/false)
BLOCKCHAIN_ENABLED=false

# Polygon Network Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# Wallet Configuration (for blockchain transactions)
# WARNING: Never commit your private key to version control!
WALLET_PRIVATE_KEY=your_wallet_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Smart Contract Addresses
ATTRIBUTION_CONTRACT_ADDRESS=

# IPFS Configuration
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud

# Pinata API Keys (for IPFS storage)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# =============================================================================
# DATABASE CONFIGURATION (Optional - for future features)
# =============================================================================

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/verifimind
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# WEB SERVER CONFIGURATION (Optional - for API mode)
# =============================================================================

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable X Intelligent Agent
ENABLE_X_AGENT=true

# Enable Z Guardian Agent
ENABLE_Z_AGENT=true

# Enable CS Security Agent
ENABLE_CS_AGENT=true

# Enable Iterative Generation (RefleXion)
ENABLE_ITERATIVE_GENERATION=true

# Enable Frontend Generation
ENABLE_FRONTEND_GENERATION=true

# Enable Attribution Tracking
ENABLE_ATTRIBUTION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# API Key for Production Access (optional)
API_KEY=

# Enable HTTPS Redirect
FORCE_HTTPS=false

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry Configuration (for error tracking)
SENTRY_DSN=

# Prometheus Metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Mock Mode (use mock responses instead of real API calls)
MOCK_MODE=false

# Verbose Logging
VERBOSE=false

# Save Intermediate Results
SAVE_INTERMEDIATE_RESULTS=true

# =============================================================================
# NOTES
# =============================================================================
#
# Quick Start:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in at minimum: OPENAI_API_KEY or ANTHROPIC_API_KEY
# 3. Set CREATOR_NAME and CREATOR_EMAIL for attribution
# 4. Run the demo: python demo_iterative_generation.py
#
# For blockchain features:
# 1. Set BLOCKCHAIN_ENABLED=true
# 2. Configure WALLET_PRIVATE_KEY and WALLET_ADDRESS
# 3. Set PINATA_API_KEY for IPFS storage
#
# For production deployment:
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=false
# 3. Configure DATABASE_URL and REDIS_URL
# 4. Set strong JWT_SECRET_KEY
# 5. Configure CORS_ORIGINS appropriately
# 6. Enable FORCE_HTTPS=true
#
# =============================================================================
